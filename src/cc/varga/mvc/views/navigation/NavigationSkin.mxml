<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:s="library://ns.adobe.com/flex/spark" 
    xmlns:mx="library://ns.adobe.com/flex/halo" width="100%" height="100%" creationComplete="myEffect">
  <s:states>
    <s:State name="Normal"/>
    <s:State name="Selected" />
    <s:State name="Hover" />
    <s:State name="SelectedHover" />
  </s:states>

  <fx:Metadata>
    [HostComponent("cc.varga.mvc.views.navigation.Navigator")]
  </fx:Metadata>
  <fx:Declarations>
    <mx:Iris id="irisIn" duration="200" />

    <s:Sequence id="myEffect" duration="500">
      <s:Parallel>
        <s:Scale />
        <s:Fade />
      </s:Parallel>
    </s:Sequence>

  </fx:Declarations>
  <s:Rect left="1" right="1" top="1" bottom="2" >
    <s:fill>
      <s:LinearGradient rotation="90">
        <s:GradientEntry color="#555566" alpha="0.7"/>
        <s:GradientEntry color="#fcfcfc" alpha="0.4" />
      </s:LinearGradient>
    </s:fill>
  </s:Rect>

  <s:Group horizontalCenter="0" verticalCenter="0">
    <s:layout>
      <s:HorizontalLayout paddingBottom="25" paddingTop="25" />
    </s:layout>
    <s:Button label="Left" click="hostComponent.leftButton_clickHandler(event)"/>
    <s:Label text="{hostComponent.label}" width="250" fontSize="24" alpha="0.3" textAlign="center"/>
