        maintainAspectRatio="true"
        maintainProjectionCenter="true"
        width="100%"
        height="100%"
        rollOverEffect="{myEffect}"
        doubleClickEnabled="true"
        doubleClick="hostComponent.imageHolder_doubleClickHandler(event)"
        rightClick="hostComponent.deleteItem()"/>

    <s:Button includeIn="Hover,SelectedHover" 
        skinClass="cc.vamel.skins.DeleteButtonSkin" 
        id="deleteButton"
        width="16"
        height="16" 
        content="@Embed('assets/delete.png')" 
        right="10"
        top="10">

    </s:Button>
  -->  
  <s:Button label="Right" click="hostComponent.rightButton_clickHandler(event)"/>
</s:Group>
</s:SparkSkin>
