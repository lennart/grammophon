<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:s="library://ns.adobe.com/flex/spark" 
    xmlns:mx="library://ns.adobe.com/flex/halo" width="100%" height="100%">
  <s:states>
    <s:State name="normal"/>
  </s:states>

  <fx:Metadata>
    [HostComponent("spark.components.Group")]
  </fx:Metadata>
  <fx:Declarations>
  </fx:Declarations>
  <s:Rect width="100%" height="100%" radiusX="2" radiusY="2">
    <s:stroke>
      <s:SolidColorStroke color="#4070cc" alpha="0.3"/>
    </s:stroke>
  </s:Rect>
  <s:Rect right="5" left="5" top="5" bottom="5">
    <s:fill>
      <s:LinearGradient rotation="90">
        <s:GradientEntry color="#80a0ff" alpha="0.7"/>
        <s:GradientEntry color="#ffffff" alpha="0.4"/>
      </s:LinearGradient>
    </s:fill>
  </s:Rect>

  <s:Group id="contentGroup" left="15" right="15" top="15" bottom="15">
    <s:layout>
      <s:VerticalLayout/>
    </s:layout>
  </s:Group>
</s:SparkSkin>
