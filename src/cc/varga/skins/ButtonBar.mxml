      <s:stroke>
        <s:SolidColorStroke color="0x262626" caps="none" weight="1" joints="miter" miterLimit="4"/>
      </s:stroke>
    </s:Rect>


    <!--- @copy spark.components.SkinnableDataContainer#dataGroup -->
    <s:DataGroup id="dataGroup" top="5" left="5" right="5" bottom="5">
